<div class="form-body-style px-5 pt-4">
  <%= form_with do |f| %>
    <%#= render 'shared/errors', object:@products %>
    <div class="form-group row">
      <div class="col-md-3 col-form-label">
        <%= f.label :name %>
      </div>
      <div class="col-md-9">
        <%= f.text_field :name, class: "form-control", placeholder: "Product Name", autofocus: true%>
      </div>
    </div>


    <div class="form-group row">
      <div class="col-md-9 offset-md-3">
        <%= f.submit 'Search', class: "btn btn-outline-purple" %>
      </div>
    </div>

  <% end %>
</div>